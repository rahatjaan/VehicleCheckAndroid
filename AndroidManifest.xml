<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.matt.vehiclecheck"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/vehicle"
        android:label="@string/app_name" >
        <activity
            android:name="com.matt.vehiclecheck.activity.LoginActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.matt.vehiclecheck.activity.MainActivity" >
        </activity>
        <activity
            android:name="com.matt.vehiclecheck.activity.SelectActivity"
            android:label="@string/title_activity_select" >
        </activity>
        <activity
            android:name="com.matt.vehiclecheck.activity.CheckBoxListActivity"
            android:label="@string/title_activity_ceck_list" >
        </activity>
    </application>

</manifest>